<div class="page-header">
  <h1>
    Offers
    <a href="/offers/new" class="btn btn-lg btn-success">New Offer</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "offers_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :offers_cont, "Offers contains" %>
    <%= f.text_field :offers_cont, :class => "form-control", :placeholder => "Offers contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "User Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='usergteqcreated_atPicker'>
                  <%= f.text_field :user_created_at_gteq, :class => "form-control", :placeholder => "User Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='userlteqcreated_atPicker'>
                  <%= f.text_field :user_created_at_lteq, :class => "form-control", :placeholder => "User Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#usergteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#userlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#usergteqcreated_atPicker').on("dp.change", function (e) {
                  $('#userlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#userlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#usergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :tags_tag_cont, "Tag tag contains" %>
      <%= f.text_field :tags_tag_cont, :class => "form-control", :placeholder => "Tag tag contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Session Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='sessionsgteqcreated_atPicker'>
                  <%= f.text_field :sessions_created_at_gteq, :class => "form-control", :placeholder => "Session Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='sessionslteqcreated_atPicker'>
                  <%= f.text_field :sessions_created_at_lteq, :class => "form-control", :placeholder => "Session Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#sessionsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#sessionslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#sessionsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#sessionslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#sessionslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#sessionsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/offers" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#offers_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Counselor</th>
        <th>Offers</th>
        <th>Actions</th>
      </tr>

      <% @offers.each do |offer| %>
      <tr>
        <td>
          <% if offer.user.present? %>
            <a href="/users/<%= offer.user.id %>">
              <%= offer.user.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= offer.offers %></td>
        <td>
          <a href="/offers/<%= offer.id %>" class="btn btn-primary">Show</a>
          <a href="/offers/<%= offer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_offer/<%= offer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @offers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
