<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A User has many wants -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Wants
      </li>

      <% @user.wants.each do |want| %>
        <li class="list-group-item">
          <a href="/wants/<%= want.id %>">
            <%= want.user_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/wants/<%= want.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == want.user %>
              <a href="/wants/<%= want.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_want/<%= want.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A User has many offers -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Offers
      </li>

      <% @user.offers.each do |offer| %>
        <li class="list-group-item">
          <a href="/offers/<%= offer.id %>">
            <%= offer.counselor_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/offers/<%= offer.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == offer.user %>
              <a href="/offers/<%= offer.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_offer/<%= offer.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A User has many counselor_likes -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Counselor_likes
      </li>

      <% @user.counselor_likes.each do |counselor_like| %>
        <li class="list-group-item">
          <a href="/counselor_likes/<%= counselor_like.id %>">
            <%= counselor_like.counselor_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/counselor_likes/<%= counselor_like.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == counselor_like.counselor %>
              <a href="/counselor_likes/<%= counselor_like.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_counselor_like/<%= counselor_like.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
