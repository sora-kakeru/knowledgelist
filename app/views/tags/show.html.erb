<div class="page-header">
  <h3>Tag #<%= @tag.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Tag</dt>
      <dd><%= @tag.tag %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tags" class="btn btn-primary">
        Back
      </a>
      <a href="/tags/<%= @tag.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_tag/<%= @tag.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Tag has many offers_tags -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Offers_tags
      </li>

      <% @tag.offers_tags.each do |offer_tag| %>
        <li class="list-group-item">
          <a href="/offer_tags/<%= offer_tag.id %>">
            <%= offer_tag.offer_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/offer_tags/<%= offer_tag.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/offer_tags/<%= offer_tag.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_offer_tag/<%= offer_tag.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_offer_tag" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for offer_id -->
      <div class="form-group">
        <label for="offer_id" class="control-label">
          Offer
        </label>

        <%= select_tag(:offer_id, options_from_collection_for_select(Offer.all, :id, :counselor_id), :class => "form-control") %>
      </div>

      <!-- Label and input for tag_id -->
      <input type="hidden" name="tag_id" value="<%= @tag.id %>">

      <button class="btn btn-block btn-success">
        Create Offer Tag
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

